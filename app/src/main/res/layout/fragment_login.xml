<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C0DFED"
    tools:context=".view.LoginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"
        android:id="@+id/guideh1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".80"
        android:id="@+id/guideh2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".12"
        android:id="@+id/guidev1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".88"
        android:id="@+id/guidev2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:background="@drawable/headerdesign"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="20dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cart"
        android:background="@drawable/shape"
        app:layout_constraintTop_toBottomOf="@+id/guideh1"
        app:layout_constraintStart_toStartOf="@id/guidev1"
        app:layout_constraintEnd_toEndOf="@id/guidev2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/guideh1"
        app:layout_constraintStart_toStartOf="@id/guidev1"
        android:layout_marginTop="140dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:padding="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="Enter Email"
        android:id="@+id/et_email"
        app:layout_constraintStart_toStartOf="@id/guidev1"
        app:layout_constraintEnd_toEndOf="@id/guidev2"
        app:layout_constraintTop_toBottomOf="@id/guideh1"
        android:background="@drawable/textdesign"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/guideh1"
        app:layout_constraintStart_toStartOf="@id/guidev1"
        android:layout_marginTop="260dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:padding="20dp"
        android:hint="Enter Password"
        android:id="@+id/et_password"
        android:inputType="textPassword"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintStart_toStartOf="@id/guidev1"
        app:layout_constraintEnd_toEndOf="@id/guidev2"
        app:layout_constraintTop_toBottomOf="@id/guideh1"
        android:background="@drawable/textdesign"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/guideh2"
        app:layout_constraintStart_toStartOf="@id/guidev1"
        app:layout_constraintEnd_toEndOf="@id/guidev2"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn_login"
        android:textSize="25dp"
        android:backgroundTint="#DF8C72"
        />

    <Button
        android:layout_width="match_parent"
        android:backgroundTint="#C0DFED"
        android:text="I DON'T HAVE AN ACCOUNT"
        android:textSize="25dp"
        android:id="@+id/btn_gotoregister"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>