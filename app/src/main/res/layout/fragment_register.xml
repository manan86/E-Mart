<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4E4CC"
    tools:context=".view.RegisterFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"
        android:id="@+id/gh1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".80"
        android:id="@+id/gh2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".12"
        android:id="@+id/gv1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".88"
        android:id="@+id/gv2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/headerdesign"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="Enter Your Name"
        android:id="@+id/et_name"
        app:layout_constraintEnd_toEndOf="@id/gv2"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:background="@drawable/textdesign"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile No"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:layout_marginTop="130dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:padding="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="Enter Your Contact"
        android:id="@+id/et_phone"
        app:layout_constraintEnd_toEndOf="@id/gv2"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:background="@drawable/textdesign"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Id"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:layout_marginTop="240dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:padding="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="Enter Email"
        android:id="@+id/et_email_2"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:background="@drawable/textdesign"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:layout_marginTop="350dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:padding="20dp"
        android:hint="Enter Password"
        android:id="@+id/et_password_2"
        android:inputType="textPassword"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        android:background="@drawable/textdesign"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="460dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/gh1"
        app:layout_constraintStart_toStartOf="@id/gv1"
        app:layout_constraintEnd_toEndOf="@+id/gv2"
        android:layout_marginBottom="30dp"
        android:id="@+id/btn_register"
        android:textSize="25dp"
        android:backgroundTint="#DF8C72"
        />

    <Button
        android:layout_width="match_parent"
        android:backgroundTint="#F4E4CC"
        android:text="I HAVE AN ACCOUNT"
        android:textSize="25dp"
        android:id="@+id/btn_gotologin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>